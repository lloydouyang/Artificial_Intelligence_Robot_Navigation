    }

    @Override
    public void addToWorld(World world) {
        isUncertain = world.getUncertain();
        super.addToWorld(world);
    }

    public static void main(String[] args) {
        try {
        	// Uncertainty
			World myWorld = new World("TestCases/myInputFile1.txt", true);
			
